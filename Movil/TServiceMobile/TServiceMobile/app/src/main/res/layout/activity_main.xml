<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:scrollbars="horizontal|vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

     <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="horizontal|vertical"
        android:rowCount="28"
        android:columnCount="2"
        android:orientation="vertical">
        <TextView
            android:text="Identificación"
            android:textSize="14dp"
            android:layout_row="0"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/identificacion" />
         <Space
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Tipo"
            android:textSize="14dp"
            android:layout_row="2"
            android:layout_column="0" />
        <Spinner
            android:id="@+id/tipo_spinner"
            android:layout_width="200dp"
            android:textSize="10dp"
            android:layout_row="2"
            android:layout_column="1"
            />
        <Space
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Nombre"
            android:textSize="14dp"
            android:layout_row="4"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/nombre" />
        <Space
            android:layout_row="5"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Fecha Nacimiento"
            android:textSize="14dp"
            android:inputType="date"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"
            android:layout_row="6"
            android:layout_column="1"
            android:id="@+id/dNacimiento" />
        <Space
            android:layout_row="7"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Direccion"
            android:textSize="14dp"
            android:inputType="textMultiLine"
            android:layout_row="8"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"
            android:layout_row="8"
            android:layout_column="1"
            android:id="@+id/direccion" />
        <Space
            android:layout_row="9"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Correo"
            android:inputType="textEmailAddress"
            android:textSize="14dp"
            android:layout_row="10"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"
            android:layout_row="10"
            android:layout_column="1"
            android:id="@+id/correo" />
        <Space
            android:layout_row="11"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Telefono"
            android:textSize="14dp"
            android:layout_row="12"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"

            android:inputType="phone"
            android:layout_row="12"
            android:layout_column="1"
            android:id="@+id/telefono" />
        <Space
            android:layout_row="13"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="País"
            android:textSize="14dp"
            android:layout_row="14"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"

            android:layout_row="14"
            android:layout_column="1"
            android:id="@+id/pais" />
        <Space
            android:layout_row="15"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Ciudad"
            android:textSize="14dp"
            android:layout_width="200dp"

            android:layout_row="16"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"

            android:layout_row="16"
            android:layout_column="1"
            android:id="@+id/ciudad" />
        <Space
            android:layout_row="16"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Región"
            android:textSize="14dp"
            android:layout_row="17"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"

            android:layout_row="17"
            android:layout_column="1"
            android:id="@+id/region" />
        <Space
            android:layout_row="18"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <TextView
            android:text="Experiencia"
            android:textSize="14dp"
            android:inputType="textMultiLine"
            android:layout_row="19"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_width="200dp"

            android:layout_row="19"
            android:layout_column="1"
            android:id="@+id/experiencia" />
        <Space
            android:layout_row="20"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />

        <TextView
            android:text="Hoja de vida"
            android:textSize="14dp"

            android:layout_row="21"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_row="21"
            android:layout_width="200dp"

            android:inputType="textMultiLine"
            android:layout_column="1"
            android:id="@+id/hVida" />
        <Space
            android:layout_row="22"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />


        <TextView
            android:text="Fecha de actualización"
            android:textSize="14dp"
            android:layout_row="23"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:layout_row="23"
            android:layout_width="200dp"
            android:layout_column="1"
            android:id="@+id/dActu" />
        <Space
            android:layout_row="24"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />

        <TextView
            android:text="Aspirancion Salarial"
            android:textSize="14dp"
            android:layout_row="25"
            android:layout_column="0" />
        <EditText
            android:text=""
            android:textSize="14dp"
            android:inputType="numberDecimal"
            android:layout_width="200dp"

            android:layout_row="25"
            android:layout_column="1"
            android:id="@+id/aspSal" />
        <Space
            android:layout_row="26"
            android:layout_column="0"
            android:layout_width="60dp"
            android:layout_height="0.5dp" />
        <Button
            android:id="@+id/addPersona"
            android:text="Agregar"
            android:layout_row="27"
            android:layout_width="390dp"
            android:layout_columnSpan="2"

            android:layout_column="0" />
    </GridLayout>

</RelativeLayout>
